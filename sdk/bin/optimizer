#
# optimizer shell script to launch the optimizer from optimizer-cli.jar on
# OSX, Unix, or Cygwin. In Windows Command Prompt, use optimizer.bat instead.
#

if [ "x${AIR_SDK_HOME}" = "x" ]
then
    SCRIPT_HOME=`dirname $0`
    AIR_SDK_HOME=${SCRIPT_HOME}/..
else
    echo Using AIR SDK: $AIR_SDK_HOME
fi

case `uname` in
        CYGWIN*)
            OS="Windows"
        ;;
        *)
            OS=Unix
esac


if [ $OS = "Windows" ]; then

    AIR_SDK_HOME=`cygpath -m $AIR_SDK_HOME`

fi

VMARGS="-Xms32m -Xmx512m -Dsun.io.useCanonCaches=false "

java $VMARGS $SETUP_SH_VMARGS -jar "${AIR_SDK_HOME}/lib/optimizer-cli.jar" "$@"
